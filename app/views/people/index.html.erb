<h1>People <%= link_to 'add', new_person_path, class: "btn btn-sm btn-primary" %></h1>

<div class="row">
  <div class="col-xs-12">
    <table class="table table-hover">
      <tbody>
        <% for person in @people %>
        <tr>
          <td><%= link_to person.name, person %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'add', new_person_path, class: "btn btn-sm btn-primary" %>
  </div>
</div>
