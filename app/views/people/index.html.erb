<h1>People <%= link_to 'add', new_person_path, class: "btn btn-sm btn-primary" %></h1>

<div class="row">
  <div class="col-xs-12">
    <ul>
      <% for person in @people %>
      <li><%= link_to person.name, person %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'add', new_person_path, class: "btn btn-sm btn-primary" %>
  </div>
</div>
