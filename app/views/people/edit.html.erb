<h1>Edit Person</h1>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@person) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <%= link_to "Cancel", @person, class: "btn btn-danger" %>
    <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
