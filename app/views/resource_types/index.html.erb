<h1>Resource Types <%= link_to "add", new_resource_type_path, class: "btn btn-sm btn-primary" %></h1>

<div class="row">
  <div class="col-xs-12">
    <table class="table table-hover">
      <tbody>
        <% for type in @types %>
        <tr>
          <td><%= link_to type.name, type %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to "add", new_resource_type_path, class: "btn btn-sm btn-primary" %>
  </div>
</div>
