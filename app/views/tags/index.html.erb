<h1>Tags <%= link_to "add", new_tag_path, class: "btn btn-sm btn-primary" %></h1>

<div class="row">
  <div class="col-xs-12">
    <table class="table table-hover">
      <tbody>
        <% for tag in @tags %>
        <tr>
          <td><%= link_to tag.name, tag %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to "add", new_tag_path, class: "btn btn-sm btn-primary" %>
  </div>
</div>
