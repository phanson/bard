<h1>Resources <%= link_to "add", new_resource_path, class: "btn btn-sm btn-primary" %></h1>

<div class="row">
  <div class="col-xs-12">
    <table class="table table-hover">
      <tbody>
        <% for resource in @resources %>
        <tr>
          <td><%= link_to resource.name, resource %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to "add", new_resource_path, class: "btn btn-sm btn-primary" %>
  </div>
</div>
